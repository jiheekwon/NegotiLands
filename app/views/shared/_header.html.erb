<div class="header">
  <div class="header-container">
    <div class="left-header">
      <div class="logo-name">
        Negoti Lands
      </div>
      <div class="logo-img">
        <%= image_tag "logo.png", size: "50x50"%>
      </div>
    </div>

    <div class="right-header">
      <% if user_signed_in? %>
        <%= link_to 'Logout', destroy_user_session_path, method: :delete, class: "link" %>
      <% else %>
        <%= link_to 'Login', new_user_session_path, class: "link" %>
        <%= link_to 'Signup', new_user_registration_path, class: "link" %>
      <% end %>
    </div>
  </div>
</div>