.show{
  height: calc( 100vh - 90px );
  background-image: url("<%= asset_path('negotilands_index.jpg') %>");
  background-size: cover;
}

.show-container{
  height: calc( 100vh - 90px );
  margin: 0 300px;
  background-color: rgba(0, 0, 0, 0.7);
  text-align: center;
  color: white;
  padding-top: 30px;
}

.show-content{
  margin-bottom: 20px;
}

.task-btns{
  display: flex;
  justify-content: center;
}

.task-btn{
  background-color: gray;
  margin: 20px 10px;
  padding: 10px;
}

.contact-btn{
  background-color: rgba(173, 19, 81, 0.7);
  margin: 30px 270px;
  padding: 10px 0;
  font-size: 20px;
}

.contact-btn:hover{
  background-color: rgba(173, 19, 81, 1);
}

.show-link{
  text-decoration: none;
  color: white;
}