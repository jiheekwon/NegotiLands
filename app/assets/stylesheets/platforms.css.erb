.thesandbox-map{
  height: 500px;
  background-image: url("<%= asset_path('thesandbox_map.png') %>");
  background-size: cover;
}

.decentraland-map{
  height: 500px;
  background-image: url("<%= asset_path('decentraland_map.png') %>");
  background-size: cover;
}

.thesandbox-title{
  position: relative;
  top: 10px;
  left: 30px;
}

.thesandbox-new-path{
  background-color: rgba(173, 19, 81, 0.7);
  width: 250px;
  height: 50px;
  text-align: center;
  padding: 12px 0;
  position: relative;
  top: 390px;
  left: 1000px;
}

.decentraland-new-path{
  background-color: rgba(173, 19, 81, 0.7);
  width: 250px;
  height: 50px;
  text-align: center;
  padding: 12px 0;
  position: relative;
}

.new-btn{
  text-decoration: none;
  color: rgba(255, 255, 255, 0.7);
}

.new-path:hover{
  background-color: rgba(173, 19, 81, 1);
}

.rental-lands{
  padding: 10px 20px;
}

.rental-land{
  float: left;
  width: 33.33%;
  text-align: center;
}

.rental-land-container{
  height: 500px;
  background-color: rgba(0, 0, 0, 0.5);
  margin: 10px;
  padding: 50px;
  color: white;
}

.rental-content{
  margin-bottom: 25px;
}

.rental-land-image{
  margin-bottom: 40px;
}

.rental-land-image:hover{
  transform:scale(1.2, 1.2);
}